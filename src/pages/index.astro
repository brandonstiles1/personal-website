			.about {
				padding: 80px 0;
				background: var(--surface-light);
			}

			.about-text {
				max-width: 800px;
				margin: 0 auto;
				font-size: 1.1rem;
				line-height: 1.8;
			}

			.about-text p {
				margin-bottom: 1.5rem;
			}

			/* Experience Section */
			.experience {
				padding: 80px 0;
			}

			.timeline {
				max-width: 800px;
				margin: 0 auto;
				position: relative;
			}

			.timeline::before {
				content: '';
				position: absolute;
				left: 30px;
				top: 0;
				bottom: 0;
				width: 2px;
				background: var(--accent-1);
			}

			.timeline-item {
				position: relative;
				margin-bottom: 3rem;
				padding-left: 80px;
			}

			.timeline-marker {
				position: absolute;
				left: 21px;
				top: 8px;
				width: 18px;
				height: 18px;
				background: var(--cta);
				border-radius: 50%;
				border: 4px solid var(--surface);
				box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
			}

			.timeline-header {
				margin-bottom: 1rem;
			}

			.timeline-header h3 {
				font-family: var(--font-heading);
				font-size: 1.3rem;
				font-weight: 600;
				color: var(--primary);
				margin-bottom: 0.25rem;
			}

			.company {
				font-size: 1.1rem;
				color: var(--cta);
				font-weight: 600;
				margin-right: 1rem;
			}

			.period {
				color: var(--text-secondary);
				font-size: 0.9rem;
			}

			.timeline-achievements {
				list-style: none;
				padding: 0;
